<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="util.randomPassword" class="org.ccci.gto.cas.util.RandomPasswordGenerator">
        <property name="maxDigits" value="8" />
        <property name="startWithLetter" value="false" />
    </bean>

    <bean id="service.gcxUserService" class="me.thekey.cas.service.UserManagerImpl">
        <property name="userDao" ref="ldap.gcxUserDao" />
        <property name="randomPasswordGenerator" ref="util.randomPassword" />
        <property name="newPasswordLength" value="8" />
    </bean>

    <bean id="service.gcxUserService.merge" class="me.thekey.cas.service.UserManagerImpl">
        <property name="userDao" ref="ldap.gcxUserDao.merge" />
        <property name="randomPasswordGenerator" ref="util.randomPassword" />
        <property name="newPasswordLength" value="8" />
    </bean>

    <bean id="base64RandomStringGenerator" class="me.thekey.cas.util.Base64RandomStringGenerator">
        <constructor-arg index="0" value="16" />
        <constructor-arg index="1" value="true" />
    </bean>

</beans>
